            cell.Border = 0;
            cell.PaddingTop = 50;
            contentTable.AddCell(cell);

            decimal WaterSavingPercentage = (auditReport.Sum(m => m.ExistingWaterCost) > 0 ? ((auditReport.Sum(m => m.WaterSavingPerDay) / auditReport.Sum(m => m.ExistingWaterCost)) * 100) : 0);
